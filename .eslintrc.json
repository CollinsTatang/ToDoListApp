{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
     "ecmafeatures": {
      "modules": true
    }
  },
  "plugins": ["jest-dom"],
  "extends": ["airbnb-base"],
  "rules": {
    "jest-dom/prefer-checked": "error",
    "jest-dom/prefer-enabled-disabled": "error",
    "jest-dom/prefer-required": "error",
    "jest-dom/prefer-to-have-attribute": "error",
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off" 
  },
  "ignorePatterns": ["dist/", "build/"]
}